#include <iostream>
#include <cmath>
#include <GL/glut.h>
#include <GL/gl.h>

using namespace std;

#ifndef SISTEMA_H
#define SISTEMA_H



class Astros{

	private:
		double calcularRaio();
	
	protected:

		int numPCir; 
		int numDCir;

		double distOrb;
		double angOrb;	
	

		double min;
		double max;
		double raio;
		double orbita;


	public:
		int year;
		int day;
	  int lum;
		char* t;
		int qtdSatelites;
		Astros** satelites;
		Astros(double aMin, double aMax, int aQtdSatelites, int aOrbita);
		void setOrbita(int aOrbita);
		void render();
		void criarSatelites();	
};



class Lua : public Astros
{
	public:
		Lua(int aOrbita);	
		void criarSatelites();
};


class Planeta : public Astros
{

	public:
		Planeta(int aQtdLuas,int aOrbita);
		void criarSatelites();	
		
	
};



class PlanetaGas : public Astros
{
	public:
		PlanetaGas(int aQtdLuas,int aOrbita);
		void criarSatelites();


	
};

class Strela : public Astros
{

	public:
		Strela(int aQtdPlanetas);
		void criarSatelites();
		void render();
	
};

class Sistema
{
	protected:
		Strela *estrela;

	public:

		
	//public Lua, public Planeta, public PlanetaGas, public Strela
	Sistema();
	void setSistema();
	void getSistema(int year, int day, int lum);
	void getSistema();
};

#endif
